<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t(".template_title") %></h2>
    <%= form.submit t(".save"), class: "button tiny button--title" %>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.upload :survey_template_upload,
        require: true,
        extension_allowlist: [".json"],
        label: t(".survey_template_upload.label"),
        button_label: t(".survey_template_upload.button_label"),
        help: t(".survey_template_upload.help")
      %>
    </div>
  </div>
</div>
